{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@atoms/*": ["src/atoms/*"],
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
